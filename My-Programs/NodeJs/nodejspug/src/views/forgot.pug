extends layout
block content
    body
      script
        include ../assets/js/jquery-3.5.1.js
        include ../assets/js/forgot.js
    <div class="modal fade" id="forgotModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm modal-dialog-centered">
        <div class="modal-content">
        <div class="modal-header bg-primary">
            <h5 class="modal-title text-light" id="loginModalLabel">Forgot Password</h5>
            <button type="button" class="btn-close text-light" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">

            <form id="forgotForm" method="POST" autocomplete="off">
                <div class="mb-3">
                  <label for="mail" class="form-label text-dark">Enter Email Address</label>
                  <input type="email" class="form-control" id="mail" name="mail" required>
                </div>
                <button id="submitForgot" type="submit" class="btn btn-primary">submit</button>
            </form>

        </div>
        <div class="modal-footer">
           <div id="forgotMsg" class="w-100 text-left text-danger" style="font-size:12px;"></div>
        </div>        
        </div>
    </div>
    </div>